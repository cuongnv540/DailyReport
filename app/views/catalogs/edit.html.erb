<% provide(:title, 'Edit Catalog') %>
<h1>Edit Catalog</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@catalog) do |f| %>
    <%= render 'shared/error_messages' , object: f.object %>

      <%= f.label :title %>
      <%= f.text_field :title %>

      <div class="field">
      <%= f.label :Suggest %><br />
      <%= f.text_area :suggest, :rows => 5, :cols => 30 %>
    </div>

      <%= f.submit "Edit Catalog", class: "btn btn-large btn-primary" %>
      <%= link_to 'Back' , catalogs_path , class: "btn btn-large btn-primary"%>
    <% end %>
  </div>
</div>